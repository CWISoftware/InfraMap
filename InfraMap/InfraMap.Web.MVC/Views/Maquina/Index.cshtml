@{
    ViewBag.Title = "Index";
    var MesaId = 1;
}


<div class="body-content" role="document">
    <div class="body-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Adicionar maquina</h4>
        </div>
        <div class="modal-body form-horizontal col-lg-8 col-lg-offset-2">
            <div class="form-group">
                <input class="form-control" id="idMesa" value=@MesaId type="hidden" />
                <input class="form-control" id="etiquetaServico" placeholder="Etiqueta de servico" />
            </div>
            <div class="form-group">
                <input class="form-control" id="patrimonio" placeholder="Numero do patrimonio" />
            </div>
            <div class="form-group">
                <select id="dropdown-modeloMaquina" class="form-control">
                    <option value="0">Selecione o modelo</option>
                </select>
            </div>
            <div class="form-group">
                <label>Processador:</label>
                <input class="form-control" id="processador" placeholder="Descriçao do processador" />
            </div>
            <div class="form-group">
                <label>Placa Mãe:</label>
                <input class="form-control" id="placaMae" placeholder="Descriçao da placa mãe" />
            </div>
            <div class="form-group">
                <label>Pentes de Memória Ram:</label>
                <input class="form-control" type="number" id="unidadesMemoriaRam" placeholder="Número de pentes de memória ram" />
            </div>
            <div class="form-group">
                <label>Tamanho de cada pente:</label>
                <div class="input-group" style="width:320px">
                    <input class="form-control form-inline" style="top:0;" type="number" id="penteMemoriaRamGB" placeholder="Tamanho de cada pente de memória ram" />
                    <div class="input-group-addon">GB</div>
                </div>
            </div>
            <div class="form-group">
                <label>Tamanho SSD:</label>
                <div class="input-group" style="width:320px">
                    <input class="form-control" type="number" style="top:0;" -id="ssd" placeholder="Tamanho do SSD" />
                    <div class="input-group-addon">GB</div>
                </div>
            </div>
            <div class="form-group">
                <label>Tamanho HD:</label>
                <div class="input-group" style="width:320px">
                    <input class="form-control" type="number" style="top:0;" id="hd" placeholder="Tamanho do HD" />
                    <div class="input-group-addon">GB</div>
                </div>
            </div>
            <div class="form-group">
                <label>Fonte:</label>
                <input class="form-control" id="fonte"  placeholder="Descrição da fonte" />
            </div>
            <div class="form-group">
                <label>Placa de Rede:</label>
                <input class="form-control" id="placaRede"  placeholder="Descrição da placa de rede" />
            </div>
            <div class="form-group">
                <label>Driver Ótico:</label>
                <input class="form-control" id="driverOtico" placeholder="Descrição do driver ótico" />
            </div>
            <h2></h2>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="RetiraDestaqueMesa()">Fechar</button>
            <button id="adicionaMaquina" type="button" class="btn btn-primary" data-dismiss="modal">Salvar</button>
        </div>
    </div>
</div>