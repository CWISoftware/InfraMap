<body onload="CarregaMaquinas()">
    <div class="body-content" role="document">
        <div class="label-center margin-bottom-80">
            <div>
                <h2>Editar modelo</h2>
            </div>
            <div>
                <div class="form-group">
                    <h4> Escolha o modelo para editar:</h4>
                    <select id="dropdown-EditarMaquina" class="form-control col-centered">
                        <option value="0">Selecione o modelo</option>
                    </select>
                </div>
                <div class="form-group">
                    <h4>Modelo: </h4>
                    <input class="form-control col-centered"
                           id="EditaModelo"
                           placeholder="Modelo do computador"
                           disabled />
                </div>
                <div class="form-group">
                    <h4>Processador:</h4>
                    <input class="form-control col-centered"
                           id="Editaprocessador"
                           placeholder="Descrição do processador"
                           disabled />
                </div>
                <div class="form-group">
                    <h4>Pentes de Memória RAM:</h4>
                    <input class="form-control col-centered"
                           type="number"
                           min="1"
                           id="EditaunidadesMemoriaRam"
                           placeholder="Número de pentes de memória RAM"
                           oninput="validarEntrada('EditaunidadesMemoriaRam')"
                           disabled />
                </div>
                <div class="form-group">
                    <h4>Tamanho de cada pente:</h4>
                    <div class="input-group col-centered" style="width:320px;">
                        <input class="form-control"
                               type="number"
                               min="1"
                               id="EditapenteMemoriaRamGB"
                               placeholder="Tamanho de cada pente de memória RAM"
                               oninput="validarEntrada('EditapenteMemoriaRamGB')"
                               disabled />
                        <div class="input-group-addon">GB</div>
                    </div>
                </div>
                <div class="form-group">
                    <h4>Tamanho SSD:</h4>
                    <div class="input-group col-centered" style="width:320px;">
                        <input class="form-control"
                               type="number"
                               min="1"
                               id="Editassd"
                               placeholder="Tamanho do SSD"
                               oninput="validarEntrada('Editassd')"
                               disabled />
                        <div class="input-group-addon">GB</div>
                    </div>
                </div>
                <div class="form-group">
                    <h4>Tamanho HD:</h4>
                    <div class="input-group col-centered" style="width:320px;">
                        <input class="form-control"
                               type="number"
                               min="1"
                               id="Editahd"
                               placeholder="Tamanho do HD"
                               oninput="validarEntrada('Editahd')"
                               disabled />
                        <div class="input-group-addon">GB</div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-default" onclick="GoBack()">Cancelar</button>
                    <button id="DeletaMaquina" type="button" class="btn btn-danger"> Deletar</button>
                    <button id="SalvaEdicaoMaquina" type="button" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</body>

@Html.Partial("~/Views/Modais/_ModalError.cshtml");