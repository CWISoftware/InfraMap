@model int

@{
    int MesaId = Model;
}

<div class="modal fade" id="modalTrocarUsuario" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal" onclick="RetiraDestaqueMesa()">Fechar</button>
                <button type="button" class="btn btn-warning pull-right margin-right-5" data-dismiss="modal" id="trocarUsuario">Trocar</button>
                <h4 class="modal-title" id="myModalLabel">Mesa @MesaId</h4>
            </div>
            <div class="modal-body form-horizontal">
                <label class="form-control text-center" id="mensagemTrocarUsuario">
                    
                </label>
                <div id="caixaEscolhas" class="hide">
                    <h4>Levar junto:</h4>
                    <div class="checkbox hide" id="temMaquina">
                        <label class="medium-label">
                            <input type="checkbox" id="chkMaquina">Maquina
                        </label>
                    </div>
                    <div class="checkbox hide" id="temRamal">
                        <label class="medium-label">
                            <input type="checkbox" id="chkRamal">Ramal
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>