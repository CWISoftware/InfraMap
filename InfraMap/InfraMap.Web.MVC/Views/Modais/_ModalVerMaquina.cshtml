@model int

@{
    var MesaId = Model;
}
<div class="modal fade" id="verMaquina" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal" onclick="RetiraDestaqueMesa()" id="FechaModal">Fechar</button>
                <button type="button" class="btn btn-primary pull-right margin-right-5" id="EditarMaquinaPessoal">Editar</button>
                <button type="button" class="btn btn-default hide pull-right" id="CancelaConfigMaquina">Cancelar</button>
                <button type="button" class="btn btn-primary hide pull-right margin-right-5" data-dismiss="modal" id="SalvaConfigMaquina">Salvar</button>
                <h4 class="modal-title" id="myModalLabel">Máquina:</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input class="form-control" id="idMesa" value=@MesaId type="hidden" />
                </div>
                <div class="form-group">
                    <label>Etiqueta de Serviço: </label>
                    <input class="form-control" id="veretiquetaServico" placeholder="Etiqueta de serviço" disabled />
                </div>
                <div class="form-group">
                    <label>Número do Patrimônio: </label>
                    <input class="form-control" id="verpatrimonio" placeholder="Número do patrimônio" disabled />
                </div>
                <div class="form-group" >
                    <label> Modelo: </label>
                    <input id="verModelo" class="form-control" disabled>
                </div>
                <div class="form-group">
                    <label>Processador:</label>
                    <input class="form-control" id="verprocessador" disabled placeholder="Descrição do processador" />
                </div>
                <div class="form-group">
                    <label>Placa Mãe:</label>
                    <input class="form-control" id="verplacaMae" disabled placeholder="Descrição da placa mãe" />
                </div>
                <div class="form-group">
                    <label>Pentes de Memória Ram:</label>
                    <input class="form-control" type="number" disabled id="verunidadesMemoriaRam" placeholder="Número de pentes de memória ram" />
                </div>
                <div class="form-group">
                    <label>Tamanho de cada pente:</label>
                    <div class="input-group" style="width:320px">
                        <input class="form-control" style="top:0;" type="number" disabled id="verpenteMemoriaRamGB" placeholder="Tamanho de cada pente de memória ram" />
                        <div class="input-group-addon">GB</div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Tamanho SSD:</label>
                    <div class="input-group" style="width:320px">
                        <input class="form-control" type="number" style="top:0;" disabled id="verssd" placeholder="Tamanho do SSD" />
                        <div class="input-group-addon">GB</div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Tamanho HD:</label>
                    <div class="input-group" style="width:320px">
                        <input class="form-control" type="number" style="top:0;" disabled id="verhd" placeholder="Tamanho do HD" />
                        <div class="input-group-addon">GB</div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Fonte:</label>
                    <input class="form-control" id="verfonte" disabled placeholder="Descrição da fonte" />
                </div>
                <div class="form-group">
                    <label>Placa de Rede:</label>
                    <input class="form-control" id="verplacaRede" disabled placeholder="Descrição da placa de rede" />
                </div>
                <div class="form-group">
                    <label>Driver Óptico:</label>
                    <input class="form-control" id="verdriverOtico" disabled placeholder="Descrição do driver óptico" />
                </div>
                <h2></h2>
            </div>
            <div class="form-group">
                <input class="form-control" id="IdPessoal" type="hidden" />
            </div>
            <div class="form-group">
                <input class="form-control" id="idMaquina" type="hidden" />
            </div>
            <div class="form-group">
                <input class="form-control" id="MaquinaTipo" type="hidden" />
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>
