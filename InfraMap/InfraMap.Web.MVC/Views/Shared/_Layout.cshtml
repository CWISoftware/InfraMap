<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Infra-Map</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="navbar navbar navbar-fixed-top color-menu">
            <div class="container">
                <div class="navbar-header">
                    <h3 class="logo"></h3>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                    </ul>
                    <form id="buscaForm" action='@Url.Action("UsuarioAutoComplete", "Base")' method="get">
                        @Html.TextBoxFor(m => m.Nome, new { @type = "text", @class = "form-control", @id = "typeahead", @name = "Nome", @value = "" })
                        <input type="submit" value="Buscar" />
                    </form>
                </div>
            </div>
    </header>
    <section class="container body-content">
        @RenderBody()      
    </section>

    <footer class="footer text-center">
        <p>&copy; @DateTime.Now.Year - InfraMap - Todos os direitos reservados</p>
    </footer>
    @section Scripts {
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("Scripts", false)
        <script src="~/Scripts/typeahead.bundle.js"></script>
        <script>
            $(function() {
                $.getJSON('/Base/UsuarioAutoComplete', function (allData) {
                    $('#typeahead').typeahead({source: allData});
                })});
        </script>
    }
</body>
</html>