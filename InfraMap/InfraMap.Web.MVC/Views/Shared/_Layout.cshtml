<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Infra-Map</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/jquery-ui")
    @Styles.Render("~/Content/jquery-ui.css")
    @Styles.Render("~/Content/jquery-ui.structure.css")
    @Styles.Render("~/Content/jquery-ui.theme.css")
</head>
<body>
    <!-- Barra de Navegação -->
    <header class="navbar navbar-default color-menu header">
        <div class="container-fluid">
            <!-- Cabeçalho barra de navegação -->
            <div class="navbar-header">
                <!-- Logo -->
                <a class="navbar-brand margin-navbar" href="~/Sede/Index">
                    <img alt="Brand" src="~/Content/img/logo.png">
                </a>
            </div>
            <!-- Botão de ação -->
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle fa fa-user margin-navbar mouse-pointer" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">  @User.Identity.Name<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        @if (User.IsInRole("GERENTE"))
                        {
                            <li><a class="fa mouse-pointer" id="btn-selecionarColaboradores">Habilitar seleção de colaboradores</a></li>
                            <li><a class="fa mouse-pointer" id="btn-mudarCor">Mudar minha cor</a></li>
                            <li role="separator" class="divider"></li>
                        }
                        @if (User.IsInRole("INFRA"))
                        {
                            <li><a class="fa mouse-pointer" id="btn-AdicionarMaquinas">Adicionar novo modelo de máquina</a></li>
                            <li><a class="fa mouse-pointer" id="btn-EditarMaquinas">Editar modelo de máquina</a></li>
                            <li role="separator" class="divider"></li>
                        }
                        <li><a class="fa fa-sign-out" href='@Url.Action("Sair","Login")'>  Sair</a></li>
                    </ul>
                </li>
            </ul>
            <!-- Barra de pesquisa -->
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control fa fa-search margin-navbar" placeholder="&#xF002; Digite o nome do colaborador" id="carregar-usuario" name="nomeCarregar">
                 </div>
            </form>
        </div>
    </header>

    <div class="modal fade" id="erroUsuarioEmNenhumaMesa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ocorreu um erro!</h4>
                </div>
                <div class="modal-body">
                    <h3>Usuário procurado não está em uma mesa ou não existe.</h3>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalGeral" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal" id="CancelaModal" onclick="RetiraDestaqueMesa()">Fechar</button>
                    <button type="button" class="btn btn-primary pull-right margin-right-5" id="SalvarCorGerente">Salvar</button>
                    <h4 class="modal-title" id="myModalLabel">Trocar cor</h4>
                </div>
                <div class="modal-body" style="align-items:center; text-align:center">
                </div>
                <div class="form-group" id="selectcolor" style="align-items:center; text-align:center">
                    <select name="color" id="choosecolor" class="form-control">
                        <option value="0">Selecione sua cor</option>
                        <option value="1" style="background-color:#000000"> black </option>
                        <option value="2" style="background-color:#000080"> navy </option>
                        <option value="3" style="background-color:#008000"> green </option>
                        <option value="4" style="background-color:#008080"> teal </option>
                        <option value="5" style="background-color:#800000"> maroon </option>
                        <option value="6" style="background-color:#800080"> purple </option>
                        <option value="7" style="background-color:#808000"> olive </option>
                        <option value="8" style="background-color:#808080"> gray </option>
                        <option value="9" style="background-color:#0000FF"> blue </option>
                        <option value="10" style="background-color:#00FF00"> lime </option>
                        <option value="11" style="background-color:#00FFFF"> aqua </option>
                        <option value="12" style="background-color:#FF0000"> red </option>
                        <option value="13" style="background-color:#FF00FF"> fuchsia </option>
                        <option value="14" style="background-color:#FFFF00"> yellow </option>
                        <option value="15" style="background-color:#C0C0C0"> silver </option>
                    </select>
                </div>
                <div class="modal-footer"></div>
            </div>
        </div>
    </div>

    <section class="box-container body-content">
        @RenderBody()
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @RenderSection("Scripts", false)

    <footer class="footer color-menu">
        <div class="container">
            <div class="container margin-footer">
                <p class="text-muted text-center">InfraMap - CWI Software - 2016</p>
            </div>
        </div>
    </footer>

</body>
</html>