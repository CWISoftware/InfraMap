<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Infra-Map</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <header class="navbar navbar color-menu">
            <div class="container">
                <div class="navbar-header">
                    <h3 class="logo"></h3>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    
                </div>
                <div class="navbar-brand navbar-collapse collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li><input form="form-control" id="carregar-usuario" name="nomeCarregar" placeholder="Procure o funcionário"/></li>
                        <li><button type="submit" class="btn btn-default" id="btn-procurar"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button></li>
                    </ul>              
                </div>
            </div>
    </header>
    <section class="container body-content">
        @RenderBody()      
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")  
    @RenderSection("Scripts", false)
</body>
</html>