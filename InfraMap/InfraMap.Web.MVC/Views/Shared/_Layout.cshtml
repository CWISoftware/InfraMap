<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Infra-Map</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/jquery-ui")
    @Styles.Render("~/Content/jquery-ui.css")
    @Styles.Render("~/Content/jquery-ui.structure.css")
    @Styles.Render("~/Content/jquery-ui.theme.css")
</head>
<body>
    <header class="navbar navbar color-menu">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="~/Sede/Index"><span class="logo navbar-brand"></span></a>
            </div>
            <div class="navbar-brand navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>
                        <div class="input-group">
                            <input class="form-control radius-campo-pesquisa" id="carregar-usuario" name="nomeCarregar" placeholder="Pesquise pelo funcionário" autocomplete="off">
                            <div class="input-group-addon">
                                <i class="fa fa-search"></i>
                            </div>
                        </div>
                    </li>
                    <li>
                        <button class="btn btn-primary pull-right" onclick="location.href='@Url.Action("Sair","Login")'">
                            <i class="fa fa-sign-out"></i> Sair
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="modal fade" id="erroUsuarioEmNenhumaMesa" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Ocorreu um erro!</h4>
                </div>
                <div class="modal-body">
                    <h3>Usuário procurado não está em uma mesa ou não existe.</h3>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
    <section class="box-container body-content">
        @RenderBody()
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/Scripts/jquery-ui.js")
    @RenderSection("Scripts", false)
</body>
</html>