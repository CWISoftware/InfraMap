<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Infra-Map</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Barra de Navegação -->
    <header class="navbar navbar-default color-menu">
        <div class="container-fluid">
            <!-- Cabeçalho barra de navegação -->
            <div class="navbar-header">
                <!-- Logo -->
                <a class="navbar-brand margin-navbar" href="~/Sede/Index">
                    <img alt="Brand" src="~/Content/img/logo.png">
                </a>
            </div>
        </div>
    </header>

    <section class="container">
        @RenderBody()
    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/login")
    @RenderSection("Scripts", false)

    <footer class="footer color-menu">
        <div class="container">
            <div class="container margin-footer">
                <p class="text-muted text-center">InfraMap - CWI Software - 2016</p>
            </div>
        </div>
    </footer>

</body>
</html>