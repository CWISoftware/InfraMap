@model InfraMap.Dominio.Sede.Andar.Andar
@{
    ViewBag.Title = "Quinto";
}
<section class="andar">
    @if (User.IsInRole("GERENTE"))
    {
        Html.RenderPartial("_OpcoesGerente");
    }
    @Html.Partial("_RotasCWISL")
    <h2>CWI - São Leopoldo - 5º andar</h2>
    <div id="partial"></div>
    <div class="salas-sul-cwi-sl">
        <div class="sala" style="width: 334px; height: inherit">
            <h4 class="margin-sala-reuniao">Reunião 5.1</h4>
        </div>
        <div class="sala" style="width: 180px; height: inherit">
            <h4 class="margin-sala-reuniao">Reunião 5.2</h4>
        </div>
        <div class="sala" style="width: 150px; height: inherit">
            <h4 class="margin-sala-reuniao">ADM</h4>
        </div>
        <div class="sala" style="width: 160px; height: inherit">
            <h4 class="margin-sala-reuniao">Diretoria</h4>
        </div>
        <div class="sala" style="width: 248px; height: inherit">
            <h4 class="margin-sala-reuniao">RH</h4>
        </div>
    </div>
    <div class="espaco-fileiras-cwi-sl"></div>
    @{
        int i_mesas = 1, num_mesas = 0;
        while (i_mesas < 108)
        {
            @Html.Raw("<div class=\"fileira pull-left\">")
            for (var i = 0; i < 6; i++, i_mesas++, num_mesas++)
            {
                @Html.Partial("_Mesa", Model.Mesas, new ViewDataDictionary { { "idMesa", i_mesas }, {"mesaSelecionada", Model.MesaSelecionada} })
            }
            @Html.Raw("</div>");

            @Html.Raw("<div class=\"fileira pull-right\">");
            for(var i = 0; i < 6; i++, i_mesas++, num_mesas++)
            {
                @Html.Partial("_Mesa", Model.Mesas, new ViewDataDictionary { { "idMesa", i_mesas }, { "mesaSelecionada", Model.MesaSelecionada } })
            }
            @Html.Raw("</div>");

            if ((num_mesas%24) == 0) {
                @Html.Raw("<div class=\"espaco-fileiras-cwi-sl\"></div>")
            }
        }
    }
</section>
