@model InfraMap.Web.MVC.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="wrapper">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.ValidationSummary(true, "Email ou senha inválidos!")
        @Html.AntiForgeryToken()
        <h2 class="form-signin-heading inframap">Inframap</h2>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Login, new { @type = "text", @class = "form-control", @placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.Login)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Senha, new { @type = "password", @class = "form-control", @placeholder = "********" })
            @Html.ValidationMessageFor(m => m.Senha)
        </div>
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
