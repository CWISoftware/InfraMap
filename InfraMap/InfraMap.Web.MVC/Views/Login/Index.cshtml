@model InfraMap.Web.MVC.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}
@if (ViewBag.Erro != null)
{
    <div class="alert alert-danger fade in alert-dismisable alert-position">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h2>@ViewBag.Erro</h2>
    </div>
}
<div class="wrapper">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-signin" }))
    {     
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <h2 class="form-signin-heading inframap">Inframap</h2>
        <div class="form-group">
            <div class="icon-addon addon-lg">
                @Html.TextBoxFor(m => m.Login, new { @type = "text", @class = "form-control", @placeholder = "Username" })
                @Html.ValidationMessageFor(m => m.Login)
                <i class="fa fa-user"></i>
            </div>
        </div>
        <div class="form-group">
            <div class="icon-addon addon-lg">
                @Html.TextBoxFor(m => m.Senha, new { @type = "password", @class = "form-control", @placeholder = "Password" })
                <i class="fa fa-lock"></i>
                @Html.ValidationMessageFor(m => m.Senha)
            </div>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">
            <i class="fa fa-sign-in"></i> Login
        </button>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
